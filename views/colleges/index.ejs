<% layout('layouts/boilerplate')%>
<div id="cluster-map"></div>
<div class="container mt-3">
    <h1>All College</h1>
    <%- include('../partials/paginate')%>
    <% for (let college of colleges.docs){%>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <%if(college.images.length) {%>
                <img class="img-fluid" alt="" src="<%=college.images[0].url%>">
                <% }else {%>
                <img class="img-fluid" alt=""
                    src="https://res.cloudinary.com/douqbebwk/image/upload/v1600103881/YelpCamp/lz8jjv2gyynjil7lswf4.png">
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= college.title %> </h5>

                    <p class="card-text"><%= college.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= college.location%></small>
                    </p>
                    <a class="btn btn-primary" href="/colleges/<%=college._id%>">View <%=college.title%></a>
                </div>
            </div>
        </div>
    </div>
    <% }%>
    <%- include('../partials/paginate')%>
</div>
<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const colleges = { features: <%- JSON.stringify(colleges.docs) %>}
</script>

<script src="/javascripts/clusterMap.js"></script>